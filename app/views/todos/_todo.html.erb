<div id="<%= dom_id todo %>">
  <p>
    <strong>Name:</strong>
    <%= todo.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= todo.description %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= todo.completed %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= todo.priority %>
  </p>

  <p>
    <strong>Assignee:</strong>
    <%= todo.user&.name || "Unassigned" %>
  </p>

  <p>
    <strong>Project:</strong>
      <%= todo.project ? link_to(todo.project.name, project_path(todo.project)) : "No project" %>
  </p>

</div>
